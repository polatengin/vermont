{
  "runner": {
    "workDir": "/tmp/vermont-runner",
    "maxConcurrentJobs": 2,
    "timeout": 3600,
    "labels": ["self-hosted", "vermont"]
  },
  "container": {
    "runtime": "none",
    "dockerHost": "",
    "networkMode": "bridge",
    "defaultImage": "ubuntu:22.04"
  },
  "storage": {
    "dataDir": "~/.vermont",
    "cacheDir": "~/.vermont/cache",
    "logsDir": "~/.vermont/logs"
  },
  "logging": {
    "level": "info",
    "format": "console",
    "file": ""
  }
}
