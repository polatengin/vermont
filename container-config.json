{
  "runner": {
    "workDir": "/tmp/vermont-runner",
    "maxConcurrentJobs": 2,
    "timeout": 3600,
    "labels": ["self-hosted", "vermont"]
  },
  "container": {
    "runtime": "docker",
    "dockerHost": "unix:///var/run/docker.sock",
    "networkMode": "bridge",
    "defaultImage": "ubuntu:22.04"
  },
  "storage": {
    "dataDir": "~/.vermont",
    "cacheDir": "~/.vermont/cache",
    "logsDir": "~/.vermont/logs"
  },
  "logging": {
    "level": "debug",
    "format": "console",
    "file": ""
  },
  "actions": {
    "registry": "https://github.com",
    "cacheEnabled": true,
    "cacheTtl": 24,
    "allowedOrgs": [],
    "nodejsVersion": "20"
  }
}
