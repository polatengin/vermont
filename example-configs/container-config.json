{
  "runner": {
    "workDir": "/workspaces/vermont",
    "maxConcurrentJobs": 2,
    "timeout": 3600,
    "labels": ["self-hosted", "vermont"]
  },
  "container": {
    "runtime": "docker",
    "dockerHost": "unix:///var/run/docker.sock",
    "networkMode": "bridge",
    "defaultImage": "vermont-runner:latest"
  },
  "storage": {
    "dataDir": "./.vermont",
    "cacheDir": "./.vermont/cache",
    "logsDir": "./.vermont/logs"
  },
  "logging": {
    "level": "debug",
    "format": "console",
    "file": ""
  },
  "actions": {
    "registry": "https://github.com",
    "cacheEnabled": true,
    "cacheTtl": 24,
    "allowedOrgs": [],
    "nodejsVersion": "20"
  },
  "env": {
    "GITHUB_TOKEN": "${GITHUB_TOKEN}",
    "CI": "true",
    "VERMONT_RUNNER": "true",
    "NODE_ENV": "production"
  }
}
