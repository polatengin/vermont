{
  "runner": {
    "workDir": "/tmp/vermont-runner",
    "maxConcurrentJobs": 2,
    "timeout": 3600,
    "labels": ["self-hosted", "vermont"]
  },
  "container": {
    "runtime": "none",
    "dockerHost": "",
    "networkMode": "bridge",
    "defaultImage": "ubuntu:22.04"
  },
  "storage": {
    "dataDir": "./.vermont",
    "cacheDir": "./.vermont/cache",
    "logsDir": "./.vermont/logs"
  },
  "logging": {
    "level": "info",
    "format": "console",
    "file": ""
  },
  "actions": {
    "registry": "https://github.com",
    "cacheEnabled": true,
    "cacheTtl": 24,
    "allowedOrgs": [],
    "nodejsVersion": "20"
  },
  "env": {
    "GITHUB_TOKEN": "${GITHUB_TOKEN}",
    "CI": "true",
    "VERMONT_RUNNER": "true",
    "PATH": "/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
  }
}
