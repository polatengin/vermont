{
  "runner": {
    "workDir": "/tmp/vermont-workspace",
    "maxConcurrentJobs": 2,
    "timeout": 3600,
    "labels": ["self-hosted", "vermont"]
  },
  "container": {
    "runtime": "docker",
    "dockerHost": "unix:///var/run/docker.sock",
    "networkMode": "bridge",
    "defaultImage": "vermont-runner:latest"
  },
  "storage": {
    "dataDir": "./.vermont",
    "cacheDir": "./.vermont/cache",
    "logsDir": "./.vermont/logs"
  },
  "logging": {
    "level": "debug",
    "format": "console",
    "file": ""
  },
  "env": {
    "GITHUB_TOKEN": "${GITHUB_TOKEN}",
    "GITHUB_REPOSITORY": "polatengin/vermont",
    "CI": "true",
    "VERMONT_RUNNER": "true",
    "NODE_ENV": "production"
  }
}
